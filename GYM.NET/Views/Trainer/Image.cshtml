@{
	Layout = "";

}
@using GYM.NET.Controllers;
@model string;
<!DOCTYPE html>
<html>

<head>
	<title>Trainer Image</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
	<link rel="stylesheet" href="~/assets/css/css.css">

</head>
<body>
	<div class="container">
		<div class="screen">
			<div class="screen__content">
				<form class="login" action="/Trainer/UploadImage" method="post" enctype="multipart/form-data">
					<h2 style="color: darkred;font-weight: bolder">Image</h2>
					<div class="login__field">
						<i class="login__icon fas fa-user"></i>
						<input type="file" class="login__input" name="imgFile" accept=".jpg, .jpeg, .png" id="imgFile" placeholder="Image">
					</div>
					<button class="button login__submit" id="submit">
						<span class="button__text">Upload</span>
						<i class="button__icon fas fa-chevron-right"></i>
					</button>
					<div>
						<p style="color: darkred; font-weight: 100">@Model</p>
						<button class="button login__submit">
							<span class="button__text"><a class="button" style="color: darkred" href="/Trainer/trainerHome">Back</a></span>
							<i class="button__icon fas fa-chevron-right"></i>
						</button>
					</div>
				</form>
			</div>
			<div class="screen__background">
				<span class="screen__background__shape screen__background__shape4"></span>
				<span class="screen__background__shape screen__background__shape3"></span>
				<span class="screen__background__shape screen__background__shape2"></span>
				<span class="screen__background__shape screen__background__shape1"></span>
			</div>
		</div>
	</div>
</body>
</html>
