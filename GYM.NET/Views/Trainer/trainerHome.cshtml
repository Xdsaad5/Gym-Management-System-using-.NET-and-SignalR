        console.log("Saad");
        const text = document.getElementById('text');
        const prog = "Build Up yourself with";
        var x = '@Model';
        var y = '@Model';
        const prog1 = x;
        let idx = 1;
        setInterval(write, 150);
        console.log(y);
        console.log(x);
        function write() {
            text.innerText = prog1.slice(0, idx);
            idx++;
            if (idx > prog.length) {
                idx = 1;
            }
        }
    </script>
</main>

